<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:key="first_preference_screen">

    <PreferenceCategory
        android:key="general_category"
        android:layout="@xml/categories_settings_layout"
        android:title="General">

        <ListPreference
            android:defaultValue="0"
            android:entries="@array/default_voice"
            android:entryValues="@array/default_voice_values"
            android:key="default_accent"
            android:layout="@xml/voices_settings_layout"
            android:summary="Set default accent within the app"
            android:title="Default Accent" />

        <Preference
            android:key="button_notification"
            android:persistent="false"
            android:title="Notification Settings"
            android:layout="@xml/voices_settings_layout"
            android:summary="Enter Notification Settings"
            />

        <Preference
            android:key="delete_recordings"
            android:layout="@xml/voices_settings_layout"
            android:summary="Delete all your recordings, you can't undo this operation!"
            android:title="Delete Recordings" />

    </PreferenceCategory>

    <PreferenceCategory
        android:layout="@xml/categories_settings_layout"
        android:title="Help">

        <Preference
            android:key="contact_us"
            android:layout="@xml/voices_settings_layout"
            android:summary="Send us a message"
            android:title="Contact Us" />

        <Preference
            android:key="rate_us"
            android:layout="@xml/voices_settings_layout"
            android:summary="If you like this app, rate us to grow"
            android:title="Rate Us!" />

        <Preference
            android:key="bug_report"
            android:layout="@xml/voices_settings_layout"
            android:summary="Found something strange? Tell us!"
            android:title="Bug Report" />

        <Preference
            android:key="donate_us"
            android:layout="@xml/voices_settings_layout"
            android:summary="Support our effort with a little donation ❤"
            android:title="Donate us!" />

        <Preference
            android:key="remove_ads"
            android:layout="@xml/voices_settings_layout"
            android:summary="Remove ads from this app"
            android:title="Remove ads!" />

    </PreferenceCategory>

    <PreferenceCategory
        android:layout="@xml/categories_settings_layout"
        android:title="About">

        <Preference
            android:key="open_source_licenses"
            android:layout="@xml/voices_settings_layout"
            android:summary="License details for open source software"
            android:title="Open source licenses" />

        <Preference
            android:key="app_version"
            android:layout="@xml/voices_settings_layout"
            android:summary="Version: 1.0"
            android:title="Say It! version" />

        <Preference
            android:key="acknowledgements"
            android:layout="@xml/voices_settings_layout"
            android:summary="Special thanks to..."
            android:title="Acknowledgements" />

    </PreferenceCategory>

</PreferenceScreen>
