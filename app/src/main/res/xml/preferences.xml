<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:key="first_preference_screen">

    <PreferenceCategory android:title="General"
        android:key="general_category"
        android:layout="@layout/title_settings_layout">

        <PreferenceScreen
            android:key="button_notification"
            android:persistent="false"
            android:title="Notification">

            <PreferenceCategory android:title="Notification Settings"
                android:layout="@layout/title_settings_layout">
                <com.example.cesarsk.say_it.settings.TimePreference
                    android:key="time_preference"
                    android:title="Set Notification Time"
                    android:layout="@layout/summary_settings_layout"
                    />

                <ListPreference
                    android:key="default_notification_rate"
                    android:title="Set Notification Rate"
                    android:summary="Set how often you want to receive our notifications"
                    android:entries="@array/default_notification_rate"
                    android:entryValues="@array/default_notification_rate_values"
                    android:defaultValue="2"
                    android:layout="@layout/summary_settings_layout"
                    />
            </PreferenceCategory>
        </PreferenceScreen>

        <ListPreference
            android:key="default_accent"
            android:title="Default Accent"
            android:entries="@array/default_voice"
            android:entryValues="@array/default_voice_values"
            android:defaultValue="0"
            android:layout="@layout/summary_settings_layout"
             />

        <Preference
            android:key="delete_recordings"
            android:title="Delete Recordings"/>

    </PreferenceCategory>

    <PreferenceCategory
        android:title="Assistance"
        android:layout="@layout/title_settings_layout">

        <Preference
            android:key="contact_us"
            android:title="Contact Us" />

        <Preference
            android:key="rate_us"
            android:title="Rate Us" />

        <Preference
            android:key="bug_report"
            android:title="Bug Report" />

    </PreferenceCategory>

</PreferenceScreen>
