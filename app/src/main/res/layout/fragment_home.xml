<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cesarsk.say_it.HomeFragment">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="WOTD"
    android:layout_centerHorizontal="true"
    android:id="@+id/WOTD_word"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="First"
        android:layout_centerInParent="true"
        android:textAlignment="center"
        android:id="@+id/first_wotd"/>

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Second"
           android:textSize="15sp"
           android:layout_alignParentEnd="true"
           android:textAlignment="center"
           android:paddingEnd="80dp"
           android:layout_alignBaseline="@id/first_wotd"
           android:id="@+id/second_wotd"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Third"
        android:textSize="15sp"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:layout_alignBaseline="@id/first_wotd"
        android:paddingStart="80dp"
        android:id="@+id/third_wotd"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fourth"
        android:textSize="15sp"
        android:layout_below="@id/first_wotd"
        android:layout_centerHorizontal="true"
        android:paddingTop="5dp"
        android:id="@+id/fourth_wotd"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fifth"
        android:textSize="15sp"
        android:layout_alignParentEnd="true"
        android:textAlignment="center"
        android:paddingEnd="80dp"
        android:layout_alignBaseline="@id/fourth_wotd"
        android:id="@+id/fifth_wotd"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sixth"
        android:textSize="15sp"
        android:layout_alignBaseline="@id/fourth_wotd"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:paddingStart="80dp"
        android:id="@+id/sixth_wotd"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seventh"
        android:textSize="15sp"
        android:layout_below="@id/fourth_wotd"
        android:layout_centerHorizontal="true"
        android:paddingTop="5dp"
        android:id="@+id/seventh_wotd"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eighth"
        android:textSize="15sp"
        android:layout_alignBaseline="@id/seventh_wotd"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:paddingStart="80dp"
        android:id="@+id/eighth_wotd"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ninth"
        android:textSize="15sp"
        android:layout_alignParentEnd="true"
        android:textAlignment="center"
        android:paddingEnd="80dp"
        android:layout_alignBaseline="@id/seventh_wotd"
        android:id="@+id/ninth_wotd"
        />

</RelativeLayout>