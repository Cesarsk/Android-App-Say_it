<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cesarsk.say_it.HomeFragment">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_settings"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="74dp"
        android:id="@+id/settings"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Benvenuto, user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/welcome"
        android:textSize="45sp"
        android:textAlignment="center"
        android:layout_below="@+id/textClock"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:textColor="@color/ElectricMint" />

    <TextView
        android:text="Word of the Day: wotd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="54dp"
        android:id="@+id/wotd"
        android:textSize="24sp"
        android:layout_below="@+id/welcome"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:textColor="@color/BurntSienna" />

    <TextView
        android:text="Favorites words: #fw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:id="@+id/favorites_words"
        android:textSize="24sp"
        android:layout_below="@+id/wotd"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:textColor="@color/BurntSienna" />

    <TextView
        android:text="Recorded words: #rw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:id="@+id/recorded_words"
        android:textSize="24sp"
        android:textAlignment="center"
        android:layout_below="@+id/favorites_words"
        android:layout_alignParentStart="true"
        android:textColor="@color/BurntSienna" />

    <TextClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:id="@+id/textClock"
        android:textSize="72dp"
        android:typeface="normal"
        android:textStyle="normal|bold"
        android:textColor="@color/BurntSienna"
        android:layout_below="@+id/settings"
        android:layout_centerHorizontal="true" />
</RelativeLayout>





