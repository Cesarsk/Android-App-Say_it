<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cesarsk.say_it.HomeFragment">

    <ImageButton
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/ic_settings"
        android:id="@+id/settings_button"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="61dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@color/RudolphsNose"/>

    <TextView
        android:text="Benvenuto, User"
        android:layout_below="@id/settings_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/welcomeText"
        android:textSize="35sp"
        android:textAlignment="center"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="25dp"
        android:textColor="@color/BurntSienna" />

    <TextView
        android:text="- Word of the Day -"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcomeText"
        android:layout_marginTop="30dp"
        android:id="@+id/WOTD_text"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textColor="@color/BurntSienna" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/WOTD_word"
        android:layout_below="@id/WOTD_text"
        android:text="WORD"
        android:layout_centerInParent="true"
        android:textSize="50sp"
        android:layout_marginTop="15dp"/>

    <TextView
        android:text="Stats"
        android:layout_below="@id/WOTD_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/statsTitle"
        android:textSize="35sp"
        android:textAlignment="center"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:textColor="@color/BurntSienna" />

    <!-- Serie di Linear Layout che ovviamente
        andrÃ  sostituita con una ListView personalizzata -->

    <LinearLayout
        android:id="@+id/stat1LL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/statsTitle"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/stat1Title"
            android:text="Stat 1"
            android:textSize="20sp" />

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/stat1progressBar"
            android:progress="37"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:paddingTop="5dp"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/stat2LL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/stat1LL"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/stat2Title"
            android:text="Stat 2"
            android:textSize="20sp" />

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/stat2progressBar"
            android:progress="68"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:paddingTop="5dp"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/stat3LL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/stat2LL"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/stat3Title"
            android:text="Stat 3"
            android:textSize="20sp" />

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/stat3progressBar"
            android:progress="4"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:paddingTop="5dp"/>

    </LinearLayout>

</RelativeLayout>





