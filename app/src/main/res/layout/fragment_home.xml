<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cesarsk.say_it.HomeFragment">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WOTD"
        android:id="@+id/WOTD_word"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/first_row_linear_layout">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="First"
            android:textAlignment="textEnd"
            android:layout_weight="1"
            android:id="@+id/first_wotd" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Second"
            android:textSize="15sp"
            android:textAlignment="center"
            android:layout_weight="1"
            android:id="@+id/second_wotd"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Third"
            android:textSize="15sp"
            android:textAlignment="textStart"
            android:id="@+id/third_wotd"
            android:layout_weight="1"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@id/first_row_linear_layout"
        android:id="@+id/second_row_linear_layout">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Fourth"
            android:textSize="15sp"
            android:paddingTop="5dp"
            android:textAlignment="textEnd"
            android:id="@+id/fourth_wotd"
            android:layout_weight="1"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Fifth"
            android:textSize="15sp"
            android:textAlignment="center"
            android:id="@+id/fifth_wotd"
            android:layout_weight="1"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Sixth"
            android:textSize="15sp"
            android:textAlignment="textStart"
            android:id="@+id/sixth_wotd"
            android:layout_weight="1"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@id/second_row_linear_layout"
        android:id="@+id/third_row_linear_layout">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Seventh"
            android:textSize="15sp"
            android:layout_weight="1"
            android:textAlignment="textEnd"
            android:paddingTop="5dp"
            android:id="@+id/seventh_wotd"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Eighth"
            android:textSize="15sp"
            android:textAlignment="center"
            android:layout_weight="1"
            android:id="@+id/eighth_wotd"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Ninth"
            android:textSize="15sp"
            android:textAlignment="textStart"
            android:layout_weight="1"
            android:id="@+id/ninth_wotd"
            />

        </LinearLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_settings"
        android:backgroundTint="@color/MainYellow"
        android:id="@+id/imageButton"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="38dp"
        android:scaleY="2"
        android:scaleX="2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true">

    </ImageButton>


</RelativeLayout>