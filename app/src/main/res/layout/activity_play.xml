<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp"
        android:id="@+id/selected_word"
        android:text="Word"
        android:textSize="80sp"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_keyboard_voice"
        android:id="@+id/rec_button"
        android:layout_marginBottom="91dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/play_original" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch_slow"
        tools:text="Slow Mode"
        android:layout_alignBottom="@+id/play_original"
        android:layout_toEndOf="@+id/play_rec"
        android:textOn="Slow On"
        android:textOff="Slow Off" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch_accent"
        tools:text="Accent"
        android:layout_alignBottom="@+id/play_original"
        android:layout_toStartOf="@+id/play_rec"
        android:checked="false"
        android:textOn="British"
        android:textOff="English"
        android:splitTrack="false" />

    <TextView
        android:text="Original"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_above="@+id/switch_slow"
        android:layout_alignStart="@+id/play_original"
        android:layout_marginBottom="30dp" />

    <TextView
        android:text="PLAY REC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_marginTop="22dp"
        android:layout_alignTop="@+id/play_rec"
        android:layout_alignStart="@+id/switch_accent" />

    <TextView
        android:text="REC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/play_rec"
        android:layout_alignEnd="@+id/textView5" />

    <com.google.android.gms.ads.AdView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/adView"
        app:adSize="BANNER"
        app:adUnitId="ca-app-pub-3940256099942544/6300978111"
        android:layout_marginBottom="19dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_play_arrow"
        android:id="@+id/play_original"
        android:layout_marginTop="57dp"
        android:layout_below="@+id/selected_word"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/common_google_signin_btn_icon_dark_normal"
        android:layout_marginBottom="21dp"
        android:id="@+id/play_rec"
        android:background="@drawable/common_google_signin_btn_icon_dark_normal"
        android:layout_above="@+id/rec_button"
        android:layout_centerHorizontal="true" />

    !--android:background="@drawable/common_google_signin_btn_icon_dark" -->
</RelativeLayout>


