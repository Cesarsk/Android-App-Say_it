<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/RudolphsNose</item>
        <item name="colorAccent">@color/ElectricMint</item>
        <item name="android:colorBackground">@android:color/background_light</item>
        <item name="android:navigationBarColor">@color/RudolphsNose</item>
    </style>

    //added stub to avoid crash on lollipop, for transparency bottombar
    <!--<style name="AppTheme.TransNav" parent="AppTheme" />-->

    <style name="CustomSearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="queryBackground">@color/BurntSienna</item>
    </style>

    <style name="CustomTitleTextAppearance">
        <item name="android:textSize">23sp</item>
        <item name="android:textStyle">bold</item>
    </style>


