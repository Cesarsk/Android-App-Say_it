<resources>
    <!-- Base application theme. -->
    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/RudolphsNose</item>
        <item name="colorAccent">@color/ElectricMint</item>
        <item name="android:colorBackground">@android:color/background_light</item>
        <item name="android:navigationBarColor">@color/RudolphsNose</item>
        <item name="searchViewStyle">@style/CustomSearchViewStyle</item>
        <item name="android:statusBarColor">@color/RudolphsNose</item>
        <item name="android:textColorPrimary">#000000</item>
    </style>

    <style name="AppThemeActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/RudolphsNose</item>
        <item name="colorAccent">@color/ElectricMint</item>
        <item name="android:colorBackground">@android:color/background_light</item>
        <item name="android:navigationBarColor">@color/RudolphsNose</item>
        <item name="searchViewStyle">@style/CustomSearchViewStyle</item>
        <item name="android:statusBarColor">@color/RudolphsNose</item>
        <item name="android:textColorPrimary">#000000</item>
    </style>

    <style name="CustomSearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="queryBackground">@color/RudolphsNoseLight</item>
        <item name="android:background">@color/RudolphsNose</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingStart">-15dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:inputType">textCapWords</item>
    </style>

    <style name="CustomTitleTextAppearance">
        <item name="android:textSize">23sp</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>
