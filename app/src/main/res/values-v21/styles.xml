<resources>
    <!-- Base application theme. -->
    <style name="BlueYellowStyle" parent="Theme.Design.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorAccent">@color/floatingButton</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="android:navigationBarColor">@color/navigationBar</item>
        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
    </style>

    <style name="BlueYellowToolbar">
        <item name="android:background">@color/primary</item>
    </style>

    <style name="BlueYellowImageView">
        <item name="android:background">@color/primary_dark</item>
    </style>

    <style name="BlueYellowEditText">
        <item name="android:background">@color/primary_dark</item>
        <item name="android:backgroundTint">@color/primary_dark</item>
        <item name="android:textColorHint">@color/primary_light</item>
    </style>

    <style name="BlueYellowView">
        <item name="android:background">@color/primary</item>
    </style>

    <style name="BlueYellowStyle.PreferenceActivity">
        <item name="colorAccent">@color/primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:statusBarColor">@color/primary_dark</item>
    </style>

</resources>