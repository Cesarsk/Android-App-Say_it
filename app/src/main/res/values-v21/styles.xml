<resources>
    <!-- Base application theme. -->
    <style name="BlueYellowStyle" parent="Theme.Design.Light.NoActionBar">
        <item name="colorPrimary">@color/Blue700</item>
        <item name="colorAccent">@color/Amber400</item>
        <item name="android:colorPrimaryDark">@color/Blue800</item>
        <item name="android:colorBackground">@color/Grey100</item>
        <item name="android:navigationBarColor">@color/Black</item>
        <item name="android:statusBarColor">@color/Blue700</item>
        <item name="android:textColorPrimary">@color/Grey900</item>
        <item name="android:textColorSecondary">@color/Grey600</item>
    </style>

    <style name="BlueYellowToolbar">
        <item name="android:background">@color/Blue700</item>
    </style>

    <style name="BlueYellowImageView">
        <item name="android:background">@color/Blue800</item>
    </style>

    <style name="BlueYellowEditText">
        <item name="android:background">@color/Blue800</item>
        <item name="android:backgroundTint">@color/Blue800</item>
        <item name="android:textColorHint">@color/Blue100</item>
        <item name="android:textColor">@color/Blue100</item>
    </style>

    <style name="BlueYellowView">
        <item name="android:background">@color/Blue700</item>
    </style>

    <style name="BlueYellowTextView">
        <item name="android:textColor">@color/Blue100</item>
    </style>

    <style name="BlueYellowChronometer">
        <item name="android:textColor">@color/Blue800</item>
    </style>

    <style name="BlueYellowImageButton">
        <item name="android:tint">@color/Blue100</item>
        <item name="android:background">@color/Blue800</item>
    </style>

    <style name="BlueYellowPlayTTS">
        <item name="android:backgroundTint">@color/Amber400</item>
    </style>

    <style name="BlueYellowSearchListDivider">
        <item name="android:divider">@color/White</item>
    </style>

    <style name="BlueYellowCardDivider">
        <item name="android:background">@color/White</item>
    </style>

    <style name="BlueYellowSwipeHint">
        <item name="android:textColor">@color/Blue900</item>
    </style>

    <style name="BlueYellowFloatingButton">
        <item name="android:tint">@color/White</item>
    </style>

    <style name="BlueYellowTextCard">
        <item name="android:textColor">@color/White</item>
    </style>

    <style name="BlueYellowCardStats">
        <item name="android:background">@color/White</item>
    </style>

    <style name="BlueYellowRandomQuote">
        <item name="android:textColor">@color/Grey600</item>
    </style>

    <style name="BlueYellowItemSearchedPrimaryText">
        <item name="android:textColor">@color/Grey900</item>
    </style>

    <style name="BlueYellowItemSearchedSecondaryText">
        <item name="android:textColor">@color/Grey600</item>
    </style>

    <style name="BlueYellowDeleteItemList">
        <item name="android:background">@color/Red500</item>
        <item name="android:textColor">@color/White</item>
    </style>

    <style name="BlueYellowQuickPlayList">
        <item name="android:tint">@color/Blue800</item>
        <item name="android:backgroundTint">@color/Grey100</item>
    </style>

    <style name="BlueYellowStyle.PreferenceActivity">
        <item name="colorAccent">@color/Blue700</item>
        <item name="android:textSize">16sp</item>
        <item name="android:statusBarColor">@color/Blue800</item>
    </style>

    <style name="BlueYellowToolbarSettings" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/Blue700</item>
        <item name="titleTextColor">@color/White</item>
    </style>

</resources>